<p id="notice"><%= notice %></p>

<div id='control-strip'>
  <h1><%= @note.title %></h1>
  <div class='btn'>
    <%= link_to 'Edit', edit_note_path(@note)%> 
  </div>
  <div class='btn'>
    <%= link_to 'Public Link', public_note_path(@note)%> 
  </div>
</div>

<div class='markdown-show'>
  <%= RDiscount.new(@note.body).to_html.html_safe %>
</div>


